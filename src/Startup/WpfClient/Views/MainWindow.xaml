<Window x:Class = "WpfClient.Views.MainWindow"
        xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels = "clr-namespace:ViewModels.ViewModels;assembly=ViewModels"
        xmlns:theme = "clr-namespace:WpfClient.Theme"
        xmlns:views = "clr-namespace:WpfClient.Views"
        mc:Ignorable = "d"
        Title = "Spreadsheet Tool"
        Height = "450"
        Width = "800"
        WindowStartupLocation = "CenterScreen"
        d:DataContext = "{viewModels:MainViewModel}"
        Padding = "{x:Static theme:UiConstants.OuterSpacingThickness}">

    <views:MainRegion />

</Window>