<base:ApplicationBase x:Class = "WpfClient.App"
                      x:TypeArguments = "views:MainWindow, viewModels:MainViewModel"
                      xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:base = "clr-namespace:BAJIEPA.Senticode.Wpf.Base;assembly=BAJIEPA.Senticode.Wpf"
                      xmlns:views = "clr-namespace:WpfClient.Views"
                      xmlns:viewModels = "clr-namespace:ViewModels;assembly=ViewModels"
                      x:ClassModifier = "internal">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source = "pack://application:,,,/Theme/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</base:ApplicationBase>