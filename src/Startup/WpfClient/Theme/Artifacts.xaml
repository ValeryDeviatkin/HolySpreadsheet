<ResourceDictionary xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system = "clr-namespace:System;assembly=System.Runtime">

    <!--Colors-->
    <Brush x:Key = "ButtonBackgroundBrush">#FFDDDDDD</Brush>
    <Brush x:Key = "GridSplitterBrush">Gray</Brush>
    <Brush x:Key = "AlertBrush">Red</Brush>
    <Brush x:Key = "ProcessButtonBackgroundBrush">LightGreen</Brush>

    <!--Opacity-->
    <system:Double x:Key = "DisabledOpacity">0.7</system:Double>

    <!--Fonts-->
    <system:Double x:Key = "HeaderFontSize">14</system:Double>
    <system:Double x:Key = "TooltipFontSize">20</system:Double>

    <!--Sizes-->
    <system:Double x:Key = "ButtonHeight">30</system:Double>

    <!--Icons-->
    <BitmapImage x:Key = "ClearIcon"
                 UriSource = "pack://application:,,,/Holy Spreadsheet;component/Theme/Icons/Clear50.png" />

</ResourceDictionary>